<db xmlns="http://hongs-core"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://hongs-core db.xsd">
  <source drvr="org.sqlite.JDBC"
          durl="jdbc:sqlite:default.db"/>
