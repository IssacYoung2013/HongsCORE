  <source drvr="com.mysql.jdbc.Driver"
          durl="jdbc:mysql://localhost:3306/hongs_core_new?useUnicode=true&amp;characterEncoding=utf8&amp;zeroDateTimeBehavior=convertToNull"
          username="root"
          password="123456"/>
  <origin name="jdbc/hongs-core"/>
  //-->

